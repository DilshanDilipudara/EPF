<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <title>View Employee</title>
</head>
<body>

    <header>
        <%- include('../partials/nav'); %>
    </header>
    <br>
    <div class="container">
        <br>
        <h2 > Employee </h2>
        <br>
        <main>
            <% if(data.length > 0) { %>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Employee Number</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Office </th>
                    <th  scope="col">Job</th>
                    <th scope="col">Update </th>
                    <th  scope="col"> Delete</th>
                </thead>
                <tbody>
                <% data.forEach((data,index)=>{ %>

                <tr>
            
                    <td><%= data.employeeNumber %></td>
                    <td><%= data.firstName %></td>
                    <td><%= data.lastName %></td>
                    <td><%= data.email %></td>
                    <td><%= data.officeName%></td>
                    <td><%= data.jobTitle %></td>
                    <td><a href="/updateemployee/<%= data.employeeNumber %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a></td>
                    <td><a href="/deleteemployee/<%= data.employeeNumber %>" class="btn btn-sm btn-danger">Delete</a></td>
                </tr>
        
                <% }) %>
                </tbody>
            </table>
            <% } %>
        </main>
    </div>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>